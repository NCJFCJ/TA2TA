<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_grant_programs</name>
    <creationDate>2013-08-09</creationDate>
    <copyright>Copyright (C) 2013. All rights reserved.</copyright>
    <license></license>
    <author>Zachary Draper</author>
    <authorEmail>zdraper@ncjfcj.org</authorEmail>
    <authorUrl>http://ncjfcj.org</authorUrl>
    <version>1.0.0</version>
    <description>This component manages a list of grant programs used by other components of the TA2TA website.</description>
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
	
    <administration>
        <menu img="components/com_grant_programs/assets/images/s_com_grant_programs.png" >COM_GRANT_PROGRAMS</menu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>grant_programs.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="administrator">
            
			<language tag="en-GB">language/en-GB.com_grant_programs.ini</language>
			<language tag="en-GB">language/en-GB.com_grant_programs.sys.ini</language>
        </languages>
    </administration>
</extension>