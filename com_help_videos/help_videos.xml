<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_help_videos</name>
    <creationDate>2014-04-24</creationDate>
    <copyright>Copyright (C) 2014 NCJFCJ. All rights reserved.</copyright>
    <license></license>
    <author>Zachary Draper</author>
    <authorEmail>zdraper@ncjfcj.org</authorEmail>
    <authorUrl>http://ncjfcj.org</authorUrl>
    <version>1.0.0</version>
    <description>Manages YouTube videos appearing in the Help Video section of the TA2TA website.</description>
    
    <scriptfile>script.php</scriptfile> <!-- Runs on install/uninstall/update -->

    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update> <!-- Runs on update -->
        <schemas>
                <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>

    <files folder="site">
        <filename>controller.php</filename>
        <filename>index.html</filename>
        <filename>router.php</filename>
        <filename>help_videos.php</filename>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>models</folder>
        <folder>views</folder>
    </files>

    <languages folder="site">
        <language tag="en-GB">language/en-GB.com_help_videos.ini</language>
    </languages>
    
    <media destination="com_help_videos" folder="media">
        <file>index.html</file>
        <file>new-ribbon.png</file>
    </media>

    <administration>
        <menu img="components/com_help_videos/assets/images/s_com_help_videos.png">COM_HELP_VIDEOS</menu>
        <submenu>
            <menu link="option=com_help_videos&amp;view=categories" view="categories" img="components/com_help_videos/assets/images/s_categories.png" alt="Help_videos/Categories">COM_HELP_VIDEOS_TITLE_CATEGORIES</menu>
            <menu link="option=com_help_videos&amp;view=videos" view="videos" img="components/com_help_videos/assets/images/s_videos.png" alt="Help_videos/Events">COM_HELP_VIDEOS_TITLE_VIDEOS</menu>
        </submenu>
        <files folder="admin">
            <filename>access.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>help_videos.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="admin">
			<language tag="en-GB">language/en-GB.com_help_videos.ini</language>
			<language tag="en-GB">language/en-GB.com_help_videos.sys.ini</language>
        </languages>
    </administration>
</extension>