<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
     	
    <!-- base_file_name -->	
   	<field 
   		default="" 
   		description=""
      label=""
      name="base_file_name" 
   		type="hidden" /> 

    <!-- checked_out -->
    <field 
      filter="unset"
      name="checked_out"
      type="hidden" />
    
    <!-- checked_out_time -->
    <field 
      filter="unset"
      name="checked_out_time"
      type="hidden" />
      
    <!-- created_by -->
    <field 
      default="" 
      description="COM_LIBRARY_FORM_CREATED_BY_DESC"
      label="COM_LIBRARY_FORM_CREATED_BY_LBL"
      name="created_by" 
      type="createdby" />
          
    <!-- description -->      
    <field 
      cols="3"
      description="COM_LIBRARY_FORM_DESCRIPTION_DESC" 
      filter="safehtml"
      label="COM_LIBRARY_FORM_DESCRIPTION_LBL"
      name="description"
      rows="3"
      type="textarea" />
          
    <!-- file -->
   	<field
   		accept="application/pdf"
   		description="COM_LIBRARY_FORM_FILE_DESC"
   		label="COM_LIBRARY_FORM_FILE_LBL"
   		name="file"
   		type="file" />

    <!-- id -->
    <field 
      class="readonly"
      default="0" 
      description="COM_LIBRARY_FORM_ID_DESC"
      label="COM_LIBRARY_FORM_ID_LBL"
      name="id" 
      readonly="true" 
      type="text" /> 
    
    <!-- name -->
    <field
      description="COM_LIBRARY_FORM_NAME_DESC"
      label="COM_LIBRARY_FORM_NAME_LBL"
      maxlength="150"
      name="name"
      type="text" />
        
    <!-- org -->
    <field
      description="COM_LIBRARY_FORM_ORG_DESC"
      disabled_message="COM_LIBRARY_ORG_DISABLED"
      label="COM_LIBRARY_FORM_ORG_LBL"
      name="org"
      type="SQLdisabled"
      query="SELECT `id` as value, `name` as org, `state` FROM #__ta_providers ORDER BY `name`;" />

    <!-- project -->
    <field
      class="inputbox"
      default="0"
      description="COM_LIBRARY_FORM_PROJECT_DESC"
      label="COM_LIBRARY_FORM_PROJECT_LBL"
      name="project"
      size="1"
      type="list">
        <option value="0">-- Select One --</option>
    </field> 
    
    <!-- state -->
    <field
      class="chzn-color-state"
      default="-1"
      description="JFIELD_PUBLISHED_DESC"
      label="JSTATUS"
      name="state"
      size="1"
      type="list">
        <option value="1">JPUBLISHED</option>
        <option value="0">JTRASHED</option>
        <option value="-1">Pending Approval</option>
        <option value="2">Outdated</option>
        <option value="3">OVW Only</option>
    </field>  

    <!-- tags -->
    <field
      class="inputbox span12 small"
      description="JTAG_DESC"
      label="JTAG"
      mode="ajax"
      multiple="true"
      name="tags"
      type="tag" />
   		
    <!-- target_audiences -->
   	<field
  		cols="3"
  		description="COM_LIBRARY_FORM_TARGET_AUDIENCES_DESC"
  		key_field="id"
  		label="COM_LIBRARY_FORM_TARGET_AUDIENCES_LBL"
      name="target_audiences"
  		type="SQLcheckboxes"
  		query="SELECT `id`, `name`, `state` FROM `#__target_audiences` ORDER BY `name`;"
  		value_field="name" />	
     		
	</fieldset>
</form>