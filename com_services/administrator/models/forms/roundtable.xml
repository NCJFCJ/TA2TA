<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
    
    <!-- alias -->
    <field
      description="COM_SERVICES_FORM_ROUNDTABLE_ALIAS_DESC"
      label="COM_SERVICES_FORM_ROUNDTABLE_ALIAS_LBL"
      maxlength="50"
      name="alias"
      type="text" />

    <!-- benefit -->
    <field 
      class="wide"
      cols="3"
      description="COM_SERVICES_FORM_ROUNDTABLE_BENEFIT_DESC" 
      filter="safehtml"
      label="COM_SERVICES_FORM_ROUNDTABLE_BENEFIT_LBL"
      maxlength="500"
      name="benefit"
      rows="3"
      type="textarea" />

		<!-- checked_out -->
		<field
			filter="unset"
			name="checked_out"
			type="hidden" />

		<!-- checked_out_time -->
    <field
    	filter="unset"
    	name="checked_out_time"
    	type="hidden" />
        	
    <!-- comments -->
    <field 
      cols="3"
      description="COM_SERVICES_FORM_COMMENTS_DESC" 
      filter="safehtml"
      label="COM_SERVICES_FORM_COMMENTS_LBL"
      name="comments"
      rows="3"
      type="textarea" />
	  
	  <!-- created -->
    <field
			name="created"
			type="hidden" />
		
		<!-- created_by -->
   	<field
   		default="" 
      description="COM_SERVICES_FORM_CREATED_BY_DESC"
      label="COM_SERVICES_FORM_CREATED_BY_LBL"
      name="created_by"
   		type="user" />

    <!-- description -->
    <field 
      cols="3"
      description="COM_SERVICES_FORM_ROUNDTABLE_DESCRIPTION_DESC" 
      filter="safehtml"
      label="COM_SERVICES_FORM_ROUNDTABLE_DESCRIPTION_LBL"
      maxlength="500"
      name="description"
      rows="3"
      type="textarea" />
    
    <!-- file -->
   	<field
   		accept="application/pdf"
   		description="COM_SERVICES_FORM_FILE_DESC"
   		label="COM_SERVICES_FORM_FILE_LBL"
   		name="file"
   		type="file" />

    <!-- goals -->
    <field 
      class="wide"
      cols="3"
      description="COM_SERVICES_FORM_ROUNDTABLE_GOALS_DESC" 
      filter="safehtml"
      label="COM_SERVICES_FORM_ROUNDTABLE_GOALS_LBL"
      maxlength="500"
      name="goals"
      rows="3"
      type="textarea" />

    <!-- how_advance -->
    <field 
      class="wide"
      cols="3"
      description="COM_SERVICES_FORM_ROUNDTABLE_HOW_ADVANCE_DESC" 
      filter="safehtml"
      label="COM_SERVICES_FORM_ROUNDTABLE_HOW_ADVANCE_LBL"
      maxlength="500"
      name="how_advance"
      rows="3"
      type="textarea" />
		
		<!-- ID -->
		<field
			class="readonly"
      default="0"
			description="JGLOBAL_FIELD_ID_DESC"
			label="COM_SERVICES_FORM_MEETING_ID_LBL"
      name="id"
			readonly="true"
			type="hidden" />

    <!-- is_partner -->
    <field 
      class="wide"
      cols="3"
      description="COM_SERVICES_FORM_ROUNDTABLE_IS_PARTNER_DESC" 
      filter="safehtml"
      label="COM_SERVICES_FORM_ROUNDTABLE_IS_PARTNER_LBL"
      maxlength="500"
      name="is_partner"
      rows="3"
      type="textarea" />
		
		<!-- modified_by -->
		<field
			name="modified_by"
			type="hidden" />
			
		<!-- modified -->
		<field
			name="modified"
			type="hidden" />

    <!-- num_participants -->
    <field 
      description="COM_SERVICES_FORM_ROUNDTABLE_NUM_PARTICIPANTS_DESC" 
      label="COM_SERVICES_FORM_ROUNDTABLE_NUM_PARTICIPANTS_LBL"
      max="999999"
      min="1"
      name="num_participants"
      type="number" />
    
    <!-- org -->
    <field
    	description="COM_SERVICES_FORM_ORG_DESC"
    	disabled_message="COM_SERVICES_FORM_ORG_DISABLED"
    	label="COM_SERVICES_FORM_ORG_LBL"
    	name="org"
    	type="SQLdisabled"
    	query="SELECT `id` as value, `name` as org, `state` FROM #__ta_providers ORDER BY `name`;" />
       
    <!-- project -->
    <field
      class="inputbox"
      default="0"
      description="COM_SERVICES_FORM_PROJECT_DESC"
      label="COM_SERVICES_FORM_PROJECT_LBL"
      name="project"
      size="1"
      type="list">
        <option value="0">-- Select One --</option>
    </field>

    <!-- proposed_locations -->
    <field 
      cols="3"
      description="COM_SERVICES_FORM_ROUNDTABLE_PROPOSED_LOCATIONS_DESC" 
      filter="safehtml"
      label="COM_SERVICES_FORM_ROUNDTABLE_PROPOSED_LOCATIONS_LBL"
      maxlength="500"
      name="proposed_locations"
      rows="3"
      type="textarea" />
    
    <!-- registration -->
    <field
      class="btn-group"
      default="0"
      description="COM_SERVICES_FORM_ROUNDTABLE_REGISTRATION_DESC" 
      filter="raw"
      label="COM_SERVICES_FORM_ROUNDTABLE_REGISTRATION_LBL"
      name="registration"
      required="true" 
      type="radio">
        <option value="1">Enabled</option>
        <option value="0">Disabled</option>
    </field>
    
    <!-- registration_adv_accessibility -->
    <field
      class="btn-group"
      default="0"
      description="COM_SERVICES_FORM_ROUNDTABLE_REGISTRATION_ADV_ACCESSIBILITY_DESC" 
      filter="raw"
      label="COM_SERVICES_FORM_ROUNDTABLE_REGISTRATION_ADV_ACCESSIBILITY_LBL"
      name="registration_adv_accessibility"
      type="radio">
        <option value="1">Enabled</option>
        <option value="0">Disabled</option>
    </field>
    
    <!-- registration_cutoff -->
    <field
      description="COM_SERVICES_FORM_ROUNDTABLE_REGISTRATION_CUTOFF_DESC"
      filter="none"
      label="COM_SERVICES_FORM_ROUNDTABLE_REGISTRATION_CUTOFF_LBL"
      name="registration_cutoff"
      type="calendar" />

    <!-- registration_q1-->
    <field
      description="COM_SERVICES_FORM_REGISTRATION_Q_DESC"
      label="COM_SERVICES_FORM_REGISTRATION_Q_LBL"
      maxlength="255"
      name="registration_q1"
      type="text" />

    <!-- registration_q1_type-->
    <field
      default="0"
      description="COM_SERVICES_FORM_REGISTRATION_Q_TYPE_DESC" 
      filter="raw"
      label="COM_SERVICES_FORM_REGISTRATION_Q_TYPE_LBL"
      name="registration_q1_type"
      type="list">
        <option value="0">COM_SERVICES_FORM_REGISTRATION_Q_TYPE_FILL_IN</option>
        <option value="1">COM_SERVICES_FORM_REGISTRATION_Q_TYPE_BOOLEAN</option>
    </field> 
    
    <!-- registration_q2-->
    <field
      description="COM_SERVICES_FORM_REGISTRATION_Q_DESC"
      label="COM_SERVICES_FORM_REGISTRATION_Q_LBL"
      maxlength="255"
      name="registration_q2"
      type="text" />

    <!-- registration_q2_type-->
    <field
      default="0"
      description="COM_SERVICES_FORM_REGISTRATION_Q_TYPE_DESC" 
      filter="raw"
      label="COM_SERVICES_FORM_REGISTRATION_Q_TYPE_LBL"
      name="registration_q2_type"
      type="list">
        <option value="0">COM_SERVICES_FORM_REGISTRATION_Q_TYPE_FILL_IN</option>
        <option value="1">COM_SERVICES_FORM_REGISTRATION_Q_TYPE_BOOLEAN</option>
    </field> 

    <!-- registration_q3-->
    <field
      description="COM_SERVICES_FORM_REGISTRATION_Q_DESC"
      label="COM_SERVICES_FORM_REGISTRATION_Q_LBL"
      maxlength="255"
      name="registration_q3"
      type="text" />

    <!-- registration_q3_type-->
    <field
      default="0"
      description="COM_SERVICES_FORM_REGISTRATION_Q_TYPE_DESC" 
      filter="raw"
      label="COM_SERVICES_FORM_REGISTRATION_Q_TYPE_LBL"
      name="registration_q3_type"
      type="list">
        <option value="0">COM_SERVICES_FORM_REGISTRATION_Q_TYPE_FILL_IN</option>
        <option value="1">COM_SERVICES_FORM_REGISTRATION_Q_TYPE_BOOLEAN</option>
    </field> 

    <!-- resources_needed -->
    <field 
      class="wide"
      cols="3"
      description="COM_SERVICES_FORM_ROUNDTABLE_RESOURCES_NEEDED_DESC" 
      filter="safehtml"
      label="COM_SERVICES_FORM_ROUNDTABLE_RESOURCES_NEEDED_LBL"
      maxlength="500"
      name="resources_needed"
      rows="3"
      type="textarea" />

    <!-- resources_provided -->
    <field 
      class="wide"
      cols="3"
      description="COM_SERVICES_FORM_ROUNDTABLE_RESOURCES_PROVIDED_DESC" 
      filter="safehtml"
      label="COM_SERVICES_FORM_ROUNDTABLE_RESOURCES_PROVIDED_LBL"
      maxlength="500"
      name="resources_provided"
      rows="3"
      type="textarea" />

   	<!-- state -->
   	<field
      class="inputbox"
      default="-1"
      description="JFIELD_PUBLISHED_DESC"
      label="JSTATUS"
      name="state"
      size="1"
      type="list">
        <option value="1">COM_SERVICES_STATUS_COMPLETE</option>
        <option value="0">COM_SERVICES_STATUS_SCHEDULED</option>
        <option value="-1">COM_SERVICES_STATUS_PENDING</option>
      	<option value="-2">COM_SERVICES_STATUS_DENIED</option>
    </field>
    
    <!-- suggested_dates -->
  	<field
    	description="COM_SERVICES_FORM_SUGGESTED_DATES_DESC"
    	label="COM_SERVICES_FORM_SUGGESTED_DATES_LBL"
    	maxlength="255"
    	name="suggested_dates"
    	type="text" />
    
    <!-- topic -->
    <field
      description="COM_SERVICES_FORM_ROUNDTABLE_TOPIC_DESC"
      label="COM_SERVICES_FORM_ROUNDTABLE_TOPIC_LBL"
      maxlength="255"
      name="topic"
      type="text" />

    <!--topic_areas-->
    <field
      cols="4"
      description="COM_SERVICES_ROUNDTABLE_FORM_TOPIC_AREAS_DESC"
      key_field="id"
      label="COM_SERVICES_ROUNDTABLE_FORM_TOPIC_AREAS_LBL"
      name="topic_areas"
      type="SQLcheckboxes"
      query="SELECT `id`, `state`, `name` FROM `#__ta_calendar_topic_areas` ORDER BY `name`;"
      value_field="name" />

	</fieldset>
</form>