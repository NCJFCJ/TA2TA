<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_services</name>
    <creationDate>2016-02-29</creationDate>
    <copyright>Copyright (C) 2016. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>Zachary Draper</author>
    <authorEmail>zachary@zadradesign.com</authorEmail>
    <authorUrl>http://zadradesign.com</authorUrl>
    <version>1.0.9</version>
    <description>This component provides custom business flows for managing services in the TA2TA project.</description>
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update> <!-- Runs on update -->
        <schemas> 
                <schemapath type="mysql">sql/updates/mysql</schemapath> 
        </schemas> 
    </update>

    <files folder="site">
        <filename>controller.php</filename>
        <filename>index.html</filename>
        <filename>router.php</filename>
        <filename>services.php</filename>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>models</folder>
        <folder>views</folder>
    </files>

    <languages folder="site">
        <language tag="en-GB">language/en-GB.com_services.ini</language>
    </languages>
    
    <media destination="com_services" folder="media">
        <file>index.html</file>
        <folder>cron_jobs</folder>
        <folder>materials</folder>
    </media>

    <administration>
        <menu img="components/com_services/assets/images/s_com_services.png">COM_SERVICES_SERVICE_REQUESTS</menu>
        <submenu>
            <menu link="option=com_services&amp;view=meetings" view="meetings" alt="Services/Meetings">COM_SERVICES_TITLE_MEETINGS</menu>
            <menu link="option=com_services&amp;view=roundtables" view="roundtables" alt="Services/Roundtables">COM_SERVICES_TITLE_ROUNDTABLES</menu>
            <menu link="option=com_services&amp;view=webinars" view="webinars" alt="Services/Webinars">COM_SERVICES_TITLE_WEBINARS</menu>
        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>services.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="administrator">
			<language tag="en-GB">language/en-GB.com_services.ini</language>
			<language tag="en-GB">language/en-GB.com_services.sys.ini</language>
        </languages>
    </administration>
</extension>