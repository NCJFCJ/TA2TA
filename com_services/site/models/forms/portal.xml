<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

    <!-- adobe_link -->
    <field
      name="adobe_link"
      type="hidden" />

    <!-- email -->
    <field
      class="form-control"
      description="COM_SERVICES_PORTAL_FORM_EMAIL_DESC"
      label="COM_SERVICES_PORTAL_FORM_EMAIL_LBL"
      maxlength="100"
      name="email"
      type="text" />

    <!-- fname -->
    <field
      class="form-control"
      description="COM_SERVICES_PORTAL_FORM_FNAME_DESC"
      label="COM_SERVICES_PORTAL_FORM_FNAME_LBL"
      maxlength="30"
      name="fname"
      type="text" />

    <!-- id -->
    <field
      name="id"
      type="hidden" />

    <!-- lname -->
    <field
      class="form-control"
      description="COM_SERVICES_PORTAL_FORM_LNAME_DESC"
      label="COM_SERVICES_PORTAL_FORM_LNAME_LBL"
      maxlength="30"
      name="lname"
      type="text" />

    <!-- num_viewers -->
    <field
      class="form-control"
      description="COM_SERVICES_PORTAL_FORM_NUM_VIEWERS_DESC"
      label="COM_SERVICES_PORTAL_FORM_NUM_VIEWERS_LBL"
      max="999"
      min="1"
      name="num_viewers"
      type="number" />

    <!-- occupation -->
    <field
      class="form-control"
      description="COM_SERVICES_PORTAL_FORM_OCCUPATION_DESC"
      key_field="id"
      label="COM_SERVICES_PORTAL_FORM_OCCUPATION_LBL"
      name="occupation"
      type="sql"
      query="SELECT 0 AS `id`, '- Select Occupation -' AS `name` UNION SELECT `id`, `name` FROM `#__services_occupations`;"
      value_field="name" />

	</fieldset>
</form>