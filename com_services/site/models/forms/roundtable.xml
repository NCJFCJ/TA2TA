<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
    
    <!--benefit-->
    <field
      class="form-control"
      cols="3"
      description="COM_SERVICES_ROUNDTABLE_FORM_BENEFIT_DESC" 
      filter="safehtml"
      label="COM_SERVICES_ROUNDTABLE_FORM_BENEFIT_LBL"
      name="benefit"
      rows="4"
      type="textarea" />
    
    <!--comments-->
    <field
      class="form-control"
      cols="3"
      description="COM_SERVICES_ROUNDTABLE_FORM_COMMENTS_DESC" 
      filter="safehtml"
      label="COM_SERVICES_ROUNDTABLE_FORM_COMMENTS_LBL"
      name="comments"
      rows="4"
      type="textarea" />
    
    <!--description-->
    <field
      class="form-control"
      cols="3"
      description="COM_SERVICES_ROUNDTABLE_FORM_DESCRIPTION_DESC" 
      filter="safehtml"
      label="COM_SERVICES_ROUNDTABLE_FORM_DESCRIPTION_LBL"
      name="description"
      rows="4"
      type="textarea" />
    
    <!--goals-->
    <field
      class="form-control"
      cols="3"
      description="COM_SERVICES_ROUNDTABLE_FORM_GOALS_DESC" 
      filter="safehtml"
      label="COM_SERVICES_ROUNDTABLE_FORM_GOALS_LBL"
      name="goals"
      rows="4"
      type="textarea" />
    
    <!--how_advance-->
    <field
      class="form-control"
      cols="3"
      description="COM_SERVICES_ROUNDTABLE_FORM_HOW_ADVANCE_DESC" 
      filter="safehtml"
      label="COM_SERVICES_ROUNDTABLE_FORM_HOW_ADVANCE_LBL"
      name="how_advance"
      rows="4"
      type="textarea" />

    <!--id-->
    <field
      default="0" 
      description="COM_SERVICES_ROUNDTABLE_FORM_ID_DESC"
      label="COM_SERVICES_ROUNDTABLE_FORM_ID_LBL"
      name="id" 
      readonly="true" 
      type="hidden" /> 
    
    <!--is_partner-->
    <field
      class="form-control"
      cols="3"
      description="COM_SERVICES_ROUNDTABLE_FORM_IS_PARTNER_DESC" 
      filter="safehtml"
      label="COM_SERVICES_ROUNDTABLE_FORM_IS_PARTNER_LBL"
      name="is_partner"
      rows="4"
      type="textarea" />

  	<!--materials-->
    <field
      accept="application/pdf"
      description="COM_SERVICES_ROUNDTABLE_FORM_MATERIALS_DESC"
      label="COM_SERVICES_ROUNDTABLE_FORM_MATERIALS_LBL"
      name="materials"
      type="file" />

    <!--num_participants-->
    <field
      class="form-control"
      description="COM_SERVICES_ROUNDTABLE_FORM_NUMBER_OF_PARTICIPANTS_DESC"
      label="COM_SERVICES_ROUNDTABLE_FORM_NUMBER_OF_PARTICIPANTS_LBL"
      maxlength="6"
      min="0"
      name="num_participants"
      step="10"
      type="number" />

    <!--project-->
    <field
      class="form-control"
      description="COM_SERVICES_ROUNDTABLE_FORM_PROJECT_DESC"
      label="COM_SERVICES_ROUNDTABLE_FORM_PROJECT_LBL"
      name="project"
      type="TAProjects" />
    
    <!--proposed_locations-->
    <field
      class="form-control"
      cols="3"
      description="COM_SERVICES_ROUNDTABLE_FORM_PROPOSED_LOCATIONS_DESC" 
      filter="safehtml"
      label="COM_SERVICES_ROUNDTABLE_FORM_PROPOSED_LOCATIONS_LBL"
      name="proposed_locations"
      rows="4"
      type="textarea" />
    
    <!--resources_needed-->
    <field
      class="form-control"
      cols="3"
      description="COM_SERVICES_ROUNDTABLE_FORM_RESOURCES_NEEDED_DESC" 
      filter="safehtml"
      label="COM_SERVICES_ROUNDTABLE_FORM_RESOURCES_NEEDED_LBL"
      name="resources_needed"
      rows="4"
      type="textarea" />
    
    <!--resources_provided-->
    <field
      class="form-control"
      cols="3"
      description="COM_SERVICES_ROUNDTABLE_FORM_RESOURCES_PROVIDED_DESC" 
      filter="safehtml"
      label="COM_SERVICES_ROUNDTABLE_FORM_RESOURCES_PROVIDED_LBL"
      name="resources_provided"
      rows="4"
      type="textarea" />

    <!--suggested_dates-->
    <field
      class="form-control"
      description="COM_SERVICES_ROUNDTABLE_FORM_SUGGESTED_DATES_DESC"
      label="COM_SERVICES_ROUNDTABLE_FORM_SUGGESTED_DATES_LBL"
      maxlength="255"
      name="suggested_dates"
      type="text" />

    <!--topic-->
    <field
      class="form-control"
      description="COM_SERVICES_ROUNDTABLE_FORM_TOPIC_DESC"
      label="COM_SERVICES_ROUNDTABLE_FORM_TOPIC_LBL"
      maxlength="255"
      name="topic"
      type="text" />

    <!--topic_areas-->
    <field
      cols="4"
      description="COM_SERVICES_ROUNDTABLE_FORM_TOPIC_AREAS_DESC"
      key_field="id"
      label="COM_SERVICES_ROUNDTABLE_FORM_TOPIC_AREAS_LBL"
      name="topic_areas"
      type="SQLcheckboxes"
      query="SELECT `id`, `state`, `name` FROM `#__ta_calendar_topic_areas` ORDER BY `name`;"
      value_field="name" />

	</fieldset>
</form>