<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

    <!-- comments -->
    <field
      class="form-control"
      cols="3"
      description="COM_SERVICES_WEBINAR_FORM_COMMENTS_DESC" 
      filter="safehtml"
      label="COM_SERVICES_WEBINAR_FORM_COMMENTS_LBL"
      name="comments"
      rows="4"
      type="textarea" />

    <!-- date -->
    <field
      class="form-control"
      description="COM_SERVICES_WEBINAR_FORM_DATE_DESC"
      label="COM_SERVICES_WEBINAR_FORM_DATE_LBL"
      name="date"
      type="text" />
    
    <!--description-->
    <field
      class="form-control"
      cols="3"
      description="COM_SERVICES_WEBINAR_FORM_DESCRIPTION_DESC" 
      filter="safehtml"
      label="COM_SERVICES_WEBINAR_FORM_DESCRIPTION_LBL"
      name="description"
      rows="4"
      type="textarea" />

    <!-- end_time -->
    <field
      class="form-control"
      description="COM_SERVICES_WEBINAR_FORM_END_TIME_DESC"
      label="COM_SERVICES_WEBINAR_FORM_END_TIME_LBL"
      name="end_time"
      type="list">
      <option value="8:15am">8:15am</option>
      <option value="8:30am">8:30am</option>
      <option value="8:45am">8:45am</option>
      <option value="9:00am">9:00am</option>
      <option value="9:15am">9:15am</option>
      <option value="9:30am">9:30am</option>
      <option value="9:45am">9:45am</option>
      <option value="10:00am">10:00am</option>
      <option value="10:15am">10:15am</option>
      <option value="10:30am">10:30am</option>
      <option value="10:45am">10:45am</option>
      <option value="11:00am">11:00am</option>
      <option value="11:15am">11:15am</option>
      <option value="11:30am">11:30am</option>
      <option value="11:45am">11:45am</option>
      <option value="12:00pm">12:00pm</option>
      <option value="12:15pm">12:15pm</option>
      <option value="12:30pm">12:30pm</option>
      <option value="12:45pm">12:45pm</option>
      <option value="1:00pm">1:00pm</option>
      <option value="1:15pm">1:15pm</option>
      <option value="1:30pm">1:30pm</option>
      <option value="1:45pm">1:45pm</option>
      <option value="2:00pm">2:00pm</option>
      <option value="2:15pm">2:15pm</option>
      <option value="2:30pm">2:30pm</option>
      <option value="2:45pm">2:45pm</option>
      <option value="3:00pm">3:00pm</option>
      <option value="3:15pm">3:15pm</option>
      <option value="3:30pm">3:30pm</option>
      <option value="3:45pm">3:45pm</option>
      <option value="4:00pm">4:00pm</option>
      <option value="4:15pm">4:15pm</option>
      <option value="4:30pm">4:30pm</option>
      <option value="4:45pm">4:45pm</option>
      <option value="5:00pm">5:00pm</option>
    </field>

    <!-- features -->
    <field
      cols="2"
      description="COM_SERVICES_WEBINAR_FORM_FEATURES_DESC"
      key_field="id"
      label="COM_SERVICES_WEBINAR_FORM_FEATURES_LBL"
      name="features"
      type="SQLcheckboxes"
      query="SELECT `id`, `state`, `name` FROM `#__services_webinar_features` ORDER BY `name`;"
      value_field="name" />

    <!--id-->
    <field
      default="0" 
      description="COM_SERVICES_WEBINAR_FORM_ID_DESC"
      label="COM_SERVICES_WEBINAR_FORM_ID_LBL"
      name="id" 
      readonly="true" 
      type="hidden" /> 

    <!-- materials -->
    <field
      accept="application/pdf"
      description="COM_SERVICES_WEBINAR_FORM_MATERIALS_DESC"
      label="COM_SERVICES_WEBINAR_FORM_MATERIALS_LBL"
      name="materials"
      type="file" />

    <!-- num_participants -->
    <field
      class="form-control"
      description="COM_SERVICES_WEBINAR_FORM_NUMBER_OF_PARTICIPANTS_DESC"
      label="COM_SERVICES_WEBINAR_FORM_NUMBER_OF_PARTICIPANTS_LBL"
      maxlength="6"
      min="0"
      name="num_participants"
      step="10"
      type="number" />

    <!-- project -->
    <field
      class="form-control"
      description="COM_SERVICES_WEBINAR_FORM_PROJECT_DESC"
      label="COM_SERVICES_WEBINAR_FORM_PROJECT_LBL"
      name="project"
      type="TAProjects" />

    <!-- registration -->
    <field
      class="btn-group"
      default="0"
      description="COM_SERVICES_WEBINAR_FORM_REGISTRATION_DESC"
      label="COM_SERVICES_WEBINAR_FORM_REGISTRATION_LBL"
      name="registration"
      type="radio">
        <option value="0">No</option>
        <option value="1">Yes</option>
    </field>

    <!-- series -->
    <field
      class="btn-group"
      default="0"
      description="COM_SERVICES_WEBINAR_FORM_SERIES_DESC"
      label="COM_SERVICES_WEBINAR_FORM_SERIES_LBL"
      name="series"
      type="radio">
        <option value="0">Single Webinar</option>
        <option value="1">Series</option>
    </field>

    <!-- start_time -->
    <field
      class="form-control"
      description="COM_SERVICES_WEBINAR_FORM_START_TIME_DESC"
      label="COM_SERVICES_WEBINAR_FORM_START_TIME_LBL"
      name="start_time"
      type="list">
      <option value="8:00am">8:00am</option>
      <option value="8:15am">8:15am</option>
      <option value="8:30am">8:30am</option>
      <option value="8:45am">8:45am</option>
      <option value="9:00am">9:00am</option>
      <option value="9:15am">9:15am</option>
      <option value="9:30am">9:30am</option>
      <option value="9:45am">9:45am</option>
      <option value="10:00am">10:00am</option>
      <option value="10:15am">10:15am</option>
      <option value="10:30am">10:30am</option>
      <option value="10:45am">10:45am</option>
      <option value="11:00am">11:00am</option>
      <option value="11:15am">11:15am</option>
      <option value="11:30am">11:30am</option>
      <option value="11:45am">11:45am</option>
      <option value="12:00pm">12:00pm</option>
      <option value="12:15pm">12:15pm</option>
      <option value="12:30pm">12:30pm</option>
      <option value="12:45pm">12:45pm</option>
      <option value="1:00pm">1:00pm</option>
      <option value="1:15pm">1:15pm</option>
      <option value="1:30pm">1:30pm</option>
      <option value="1:45pm">1:45pm</option>
      <option value="2:00pm">2:00pm</option>
      <option value="2:15pm">2:15pm</option>
      <option value="2:30pm">2:30pm</option>
      <option value="2:45pm">2:45pm</option>
      <option value="3:00pm">3:00pm</option>
      <option value="3:15pm">3:15pm</option>
      <option value="3:30pm">3:30pm</option>
      <option value="3:45pm">3:45pm</option>
      <option value="4:00pm">4:00pm</option>
    </field>

    <!-- sub_title -->
    <field
      class="form-control"
      description="COM_SERVICES_WEBINAR_FORM_SUB_TITLE_DESC"
      label="COM_SERVICES_WEBINAR_FORM_SUB_TITLE_LBL"
      maxlength="150"
      name="sub_title"
      type="text" />

    <!-- time_zone -->
    <field
      class="form-control"
      default="America/Los Angeles"
      description="COM_SERVICES_WEBINAR_FORM_TIME_ZONE_DESC"
      label="COM_SERVICES_WEBINAR_FORM_TIME_ZONE_LBL"
      name="time_zone"
      type="list">
      <option value="America/New_York">America/New York (EDT)</option>
      <option value="America/Chicago">America/Chicago (CDT)</option>
      <option value="America/Boise">America/Boise (MDT)</option>
      <option value="America/Los_Angeles">America/Los Angeles (PDT)</option>
    </field>

    <!-- title -->
    <field
      class="form-control"
      description="COM_SERVICES_WEBINAR_FORM_TITLE_DESC"
      label="COM_SERVICES_WEBINAR_FORM_TITLE_LBL"
      maxlength="150"
      name="title"
      type="text" />

	</fieldset>
</form>