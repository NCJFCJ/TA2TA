<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			class="readonly"
            default="0"
			description="JGLOBAL_FIELD_ID_DESC"
			label="COM_TA_CALENDAR_FORM_LBL_TOPICAREA_ID"
            name="id"
			readonly="true"
			type="text" /> 
		<field
			description="COM_TA_CALENDAR_FORM_DESC_TOPICAREA_NAME" 
            filter="string"
            label="COM_TA_CALENDAR_FORM_LBL_TOPICAREA_NAME"
            maxlength="50"
			name="name"
			required="true" 
            type="text" /> 
		<field
			default="" 
            description="COM_TA_CALENDAR_FORM_DESC_TOPICAREA_CREATED_BY"
			label="COM_TA_CALENDAR_FORM_LBL_TOPICAREA_CREATED_BY"
            name="created_by"
			type="createdby" /> 
        <field
			class="inputbox"
			default="1"
			description="JFIELD_PUBLISHED_DESC"
			label="JSTATUS"
			name="state"
			size="1"
			type="list">
				<option value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
		</field> 
		<field
			filter="unset"
			name="checked_out"
			type="hidden" />
        <field
			filter="unset"
			name="checked_out_time"
			type="hidden" />
	</fieldset>
</form>