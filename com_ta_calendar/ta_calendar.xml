<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_ta_calendar</name>
    <creationDate>2013-08-10</creationDate>
    <copyright>Copyright (C) 2013-2014 NCJFCJ. All rights reserved.</copyright>
    <license></license>
    <author>Zachary Draper</author>
    <authorEmail>zdraper@ncjfcj.org</authorEmail>
    <authorUrl>http://ncjfcj.org</authorUrl>
    <version>2.3.3</version>
    <description>A custom calendar for the TA2TA website that categories events by a number of different criteria and allows users to post their own events.</description>
    
    <scriptfile>script.php</scriptfile> <!-- Runs on install/uninstall/update -->

    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update> <!-- Runs on update -->
        <schemas>
                <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>

    <files folder="site">
        <filename>controller.php</filename>
        <filename>index.html</filename>
        <filename>router.php</filename>
        <filename>ta_calendar.php</filename>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>models</folder>
        <folder>views</folder>
    </files>
    <languages folder="site">
        <language tag="en-GB">language/en-GB.com_ta_calendar.ini</language>
    </languages>
	<media destination="com_ta_calendar" folder="media">
        <filename>cron.php</filename>
		<filename>index.html</filename>
        <folder>images</folder>
	</media>
    <administration>
        <menu img="components/com_ta_calendar/assets/images/s_com_ta_calendar.png" >COM_TA_CALENDAR</menu>
        <submenu>
			<menu link="option=com_ta_calendar&amp;view=events" view="events" img="components/com_ta_calendar/assets/images/s_events.png" alt="Ta_calendar/Events">COM_TA_CALENDAR_TITLE_EVENTS</menu>
			<menu link="option=com_ta_calendar&amp;view=topicareas" view="topicareas" img="components/com_ta_calendar/assets/images/s_topicareas.png" alt="Ta_calendar/Topicareas">COM_TA_CALENDAR_TITLE_TOPICAREAS</menu>
        </submenu>
        <files folder="admin">
            <filename>access.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>ta_calendar.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="admin">
			<language tag="en-GB">language/en-GB.com_ta_calendar.ini</language>
			<language tag="en-GB">language/en-GB.com_ta_calendar.sys.ini</language>
        </languages>
    </administration>
</extension>