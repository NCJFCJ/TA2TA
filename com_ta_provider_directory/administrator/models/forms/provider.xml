<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
	  	<field 
        	filter="unset"
        	name="checked_out"
        	type="hidden" />
        
        <field 
        	filter="unset"
        	name="checked_out_time"
        	type="hidden" />
        	
		<field
        	description="COM_TA_PROVIDER_DIRECTORY_FORM_CONTACT_EMAIL_DESC"
        	label="COM_TA_PROVIDER_DIRECTORY_FORM_CONTACT_EMAIL_LBL"
        	maxlength="150"
        	name="contact_email"
        	type="email" /> 
        	
        <field
        	description="COM_TA_PROVIDER_DIRECTORY_FORM_CONTACT_FIRST_NAME_DESC"
        	label="COM_TA_PROVIDER_DIRECTORY_FORM_CONTACT_FIRST_NAME_LBL"
        	maxlength="30"
        	name="contact_first_name"
        	type="text" />
        	
        <field
        	description="COM_TA_PROVIDER_DIRECTORY_FORM_CONTACT_LAST_NAME_DESC"
        	label="COM_TA_PROVIDER_DIRECTORY_FORM_CONTACT_LAST_NAME_LBL"
        	maxlength="30"
        	name="contact_last_name"
        	type="text" />	

		<field
        	description="COM_TA_PROVIDER_DIRECTORY_FORM_CONTACT_PHONE_DESC"
        	label="COM_TA_PROVIDER_DIRECTORY_FORM_CONTACT_PHONE_LBL"
        	maxlength="25"
        	name="contact_phone"
        	type="tel" />
		
		<field
        	description="COM_TA_PROVIDER_DIRECTORY_FORM_CONTACT_TITLE_DESC"
        	label="COM_TA_PROVIDER_DIRECTORY_FORM_CONTACT_TITLE_LBL"
        	maxlength="150"
        	name="contact_title"
        	type="text" />
        	
        <field
	        class="inputbox"
	        default="1"
	        description="JFIELD_PUBLISHED_DESC"
	        label="JSTATUS"
	        name="contact_state"
	        size="1"
	        type="list">
		        <option value="1">JPUBLISHED</option>
		        <option value="0">JUNPUBLISHED</option>
		        <option value="-1">JTRASHED</option>
    	</field> 	
        	
        <field
	        class="inputbox"
	        default="1"
	        description="JFIELD_PUBLISHED_DESC"
	        label="JSTATUS"
	        name="project_state"
	        size="1"
	        type="list">
		        <option value="1">JPUBLISHED</option>
		        <option value="0">JUNPUBLISHED</option>
		        <option value="-1">JTRASHED</option>
    	</field>
        
        <field
            class="form-control"
            description="COM_TA_PROVIDER_DIRECTORY_FORM_PROJECT_AWARD_NUMBER_DESC"
            label="COM_TA_PROVIDER_DIRECTORY_FORM_PROJECT_AWARD_NUMBER_LBL"
            maxlength="15"
            name="project_award_number"
            type="text" />
    	
    	<field
        	description="COM_TA_PROVIDER_DIRECTORY_FORM_PROJECT_TITLE_DESC"
        	label="COM_TA_PROVIDER_DIRECTORY_FORM_PROJECT_TITLE_LBL"
        	maxlength="255"
        	name="project_title"
        	type="text" />
        	
        <field 
            cols="3"
            description="COM_TA_PROVIDER_DIRECTORY_FORM_PROJECT_SUMMARY_DESC" 
            filter="safehtml"
            label="COM_TA_PROVIDER_DIRECTORY_FORM_PROJECT_SUMMARY_LBL"
            name="project_summary"
            rows="3"
            type="textarea" />
        	
      	<field 
       		default="" 
       		description="COM_TA_PROVIDER_DIRECTORY_FORM_DESC_PROVIDER_CREATED_BY"
            label="COM_TA_PROVIDER_DIRECTORY_FORM_LBL_PROVIDER_CREATED_BY"
            name="created_by" 
       		type="createdby" /> 

     	<field 
       		class="readonly"
            default="0" 
       		description="JGLOBAL_FIELD_ID_DESC"
            label="COM_TA_PROVIDER_DIRECTORY_FORM_LBL_PROVIDER_ID"
            name="id" 
       		readonly="true" 
            type="text" /> 

       <field 
       		description="COM_TA_PROVIDER_DIRECTORY_FORM_DESC_PROVIDER_NAME" 
            filter="string"
            label="COM_TA_PROVIDER_DIRECTORY_FORM_LBL_PROVIDER_NAME"
            maxlength="255"
            name="name"
            type="text" /> 

    	<field
	        class="inputbox"
	        default="1"
	        description="JFIELD_PUBLISHED_DESC"
	        label="JSTATUS"
	        name="state"
	        size="1"
	        type="list">
		        <option value="1">JPUBLISHED</option>
		        <option value="0">JUNPUBLISHED</option>
    	</field> 
	</fieldset>
</form>