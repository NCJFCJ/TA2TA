<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		
		<field
			class="readonly"
            default="0"
			description="JGLOBAL_FIELD_ID_DESC"
			label="COM_TA_PROVIDERS_FORM_LBL_TAPROVIDER_ID"
            name="id"
			readonly="true"
			type="text" /> 
			
       	<field
       		default="" 
            description="COM_TA_PROVIDERS_FORM_DESC_TAPROVIDER_CREATED_BY"
            label="COM_TA_PROVIDERS_FORM_LBL_TAPROVIDER_CREATED_BY"
            name="created_by"
       		type="createdby" /> 

      	<field
       		description="COM_TA_PROVIDERS_FORM_DESC_TAPROVIDER_NAME" 
            filter="string"
            label="COM_TA_PROVIDERS_FORM_LBL_TAPROVIDER_NAME"
            maxlength="150"
            name="name"
       		type="text"
            required="true" /> 
            
       	<field
       		description="COM_TA_PROVIDERS_FORM_DESC_TAPROVIDER_WEBSITE"
       		label="COM_TA_PROVIDERS_FORM_LBL_TAPROVIDER_WEBSITE"
       		maxlength="255"
       		name="website"
       		type="url"	/>

     	<field
	        class="inputbox"
	        default="1"
	        description="JFIELD_PUBLISHED_DESC"
	        label="JSTATUS"
	        name="state"
	        size="1"
	        type="list">
	        	<option value="1">JPUBLISHED</option>
	        	<option value="0">JUNPUBLISHED</option>
	    </field> 
	    
	    <field
			name="created"
			type="hidden" />
		
		<field
			name="modified_by"
			type="hidden" />
			
		<field
			name="modified"
			type="hidden" />

  		<field
  			filter="unset"
  			name="checked_out"
  			type="hidden" />
  			
        <field
        	filter="unset"
        	name="checked_out_time"
        	type="hidden" />

	</fieldset>
</form>