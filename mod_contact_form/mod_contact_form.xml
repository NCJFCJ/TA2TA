<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>MOD_CONTACT_FORM</name>
	<creationDate>May 2013</creationDate>
	<author>Zachary Draper</author>
	<authorEmail>zdraper@ncjfcj.org</authorEmail>
	<authorUrl>http://www.ncjfcj.org</authorUrl>
	<copyright>Copyright 2013 NCJFCJ. All rigths reserved.</copyright>
	<version>2.0.0</version>
	<description>MOD_CONTACT_FORM_DESCRIPTION</description>
	 
	<files>
		<folder>ajax</folder>
		<folder>language</folder>
		<filename>index.html</filename>
		<filename module="mod_contact_form">mod_contact_form.php</filename>
		<filename>mod_contact_form.xml</filename>
	</files>
	
	<languages folder="language">
    	<language tag="en-GB">en-GB/en-GB.mod_contact_form.ini</language>
    	<language tag="en-GB">en-GB/en-GB.mod_contact_form.sys.ini</language>
  	</languages>
  	
  	<config>
  		<fields name="params">
  			<fieldset name="general" label="MOD_CONTACT_FORM_GENERAL_SETTINGS">
  				<field
  					description="MOD_CONTACT_FORM_BEFORE_TEXT_DESC"
  					label="MOD_CONTACT_FORM_BEFORE_TEXT_LABEL"
  					name="beforeFormText"
  					type="editor" />
  				<field
  					description="MOD_CONTACT_FORM_AFTER_TEXT_DESC"
  					label="MOD_CONTACT_FORM_BEFORE_TEXT_LABEL"
  					name="afterFormText"
  					type="editor" />
  				<field
  					description="MOD_CONTACT_FORM_TO_EMAIL_DESC"
  					label="MOD_CONTACT_FORM_TO_EMAIL_LABEL"
  					name="toEmail"
  					type="text" />
  				<field
  					description="MOD_CONTACT_FORM_CC_EMAIL_DESC"
  					label="MOD_CONTACT_FORM_CC_EMAIL_LABEL"
  					name="ccEmail"
  					type="text" />
  				<field
  					description="MOD_CONTACT_FORM_MODULE_CLASS_DESC"
  					label="MOD_CONTACT_FORM_MODULE_CLASS_LABEL"
  					name="moduleclass"
  					type="text" />
  				<field
  					default="btn"
  					description="MOD_CONTACT_FORM_BUTTON_CLASS_DESC"
  					label="MOD_CONTACT_FORM_BUTTON_CLASS_LABEL"
  					name="btnClass"
  					type="text" />
  				<field
  					default="icon-envelope"
  					description="MOD_CONTACT_FORM_BUTTON_ICON_DESC"
  					label="MOD_CONTACT_FORM_BUTTON_ICON_LABEL"
  					name="btnIcon"
  					type="text" />
  			</fieldset>
  		</fields>
  	</config>
</extension>